<div class="body"> 
   <div class="form-show">
        <% if logged_in? and (current_user == @article.user or current_user.admin?) %>
            <%= link_to "Modifier l'article", edit_article_path(@article), class: "lien-btn" %>
            <%= link_to 'Supprimer', article_path(@article), data: { "turbo-method": :delete }, class: "lien-btn" %>
        <% end %>
        <%= link_to "Tout les articles", articles_path, class: "lien-btn" %>
    </div>
    <div class="article">
        <div class="box-show">
            <div class="title-article">
                <h1> <%= @article.title %> </h1>
            </div>
            <div class="body-article">
                <p> <%= @article.description %> </p>
            </div>
        </div>
        <% if @article.user %>
            <div class="auteur-article">
                <p>Par</p>
                <%= link_to @article.user.username, user_path(@article.user) %>
            </div>
        <% end %>
    </div>
</div>