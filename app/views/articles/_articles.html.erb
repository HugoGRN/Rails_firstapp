<div class="form">
    <table class="form-table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Auteur</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% obj.each do |article| %>
                <tr>
                    <td> <%= link_to article.title, article_path(article) %> </td>
                    <td> <%= link_to truncate(article.description, length: 60 ), article_path(article) %> </td>
                    <td> <%= article.user.username if article.user_id? %> </td>
                    <td> <%= time_tag(article.created_at) %> </td>
                    <td> 
                        <% if logged_in? and current_user == article.user %>
                            <%= link_to 'Modifier', edit_article_path(article) %>
                            <%= link_to 'Supprimer', article_path(article), data: { "turbo-method": :delete } %>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>