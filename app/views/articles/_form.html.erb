<div class="lien">
    <%= link_to "Tout les articles", articles_path, class: "lien-btn" %>
</div>

<%= render 'shared/errors', obj: @article %>

<div class="form">
    <div class="box">
        <%= form_for @article do |f| %>
            <div class="champ">
                <%= f.label :titre %><br>
                <%= f.text_field :title %>
            </div>
            <div class="champ">
                <%= f.label :description %>
                <%= f.text_area :description %>
            </div>
            <div class="champ-button">
                <%= f.submit %>
            </div>
        <% end %>
    </div>
</div>