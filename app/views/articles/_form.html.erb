<div class="lien">
    <%= link_to "Tout les articles", articles_path %>
</div>

<div class="error">
    <% if @article.errors.any? %>
    <h2>Erreur détectée :</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>
</div>

<div class="form">
    <div class="box">
        <%= form_for @article do |f| %>
            <div class="champ">
                <%= f.label :titre %><br>
                <%= f.text_field :title %>
            </div>
            <div class="champ">
                <%= f.label :description %><br>
                <%= f.text_area :description %>
            </div>
            <div class="champ-button">
                <%= f.submit %>
            </div>
        <% end %>
    </div>
</div>