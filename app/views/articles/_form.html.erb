<div class="lien">
    <%= link_to "Tout les articles", articles_path %>
</div>

<div class="error">
    <% if @article.errors.any? %>
    <h2>Erreur détectée :</h2>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
    <% end %>
</div>

<div class="form">
    <%= form_for @article do |f| %>
        <p>
            <%= f.label :title %><br>
            <%= f.text_field :title %>
        </p>
        <p>
            <%= f.label :description %><br>
            <%= f.text_area :description %>
        </p>
        <p>
            <%= f.submit %>
        </p>
    <% end %>
</div>