<div class="container">
    <h1>Tout les utilisateurs</h1>
</div>

<div class="grid-users">
    <% @users.each do |user| %>      
        <div class="box-users">
            <div class="username">
                <%= link_to user.username, user_path(user) %>
            </div>
            <div class="info-user">
                <%= pluralize(user.articles.count, "article") %>
            </div>
        </div>
    <% end %>
</div>