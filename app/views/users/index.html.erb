<div class="container">
    <h1>Tout les utilisateurs</h1>
</div>

<div class="grid-users">
    <% @users.each do |user| %>      
        <div class="box-users">
            <div class="username">
                <%= link_to user.username, user_path(user) %>
                <% if logged_in? and current_user.admin? %>
                    <%= link_to "❌", user_path(user),
                        data: { "turbo-method": :delete, "turbo-confirm": "Supprimer l'utilisateur et ses articles ?" }
                    %>
                <% end %>
            </div>
            <div class="info-user">
                <%= pluralize(user.articles.count, "article") %>
            </div>
        </div>
    <% end %>
</div>
<%= will_paginate @users %>